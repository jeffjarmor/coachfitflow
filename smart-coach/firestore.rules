rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Coaches collection
    match /coaches/{coachId} {
      allow read: if isOwner(coachId);
      allow create: if isAuthenticated() && request.auth.uid == coachId;
      allow update: if isOwner(coachId);
      allow delete: if isOwner(coachId);
      
      // Clients subcollection
      match /clients/{clientId} {
        allow read, write: if isOwner(coachId);
        
        // Client measurements subcollection
        match /measurements/{measurementId} {
          allow read, write: if isOwner(coachId);
        }
      }
      
      // Coach-specific exercises
      match /exercises/{exerciseId} {
        allow read, write: if isOwner(coachId);
      }
      
      // Routines
      match /routines/{routineId} {
        allow read, write: if isOwner(coachId);
        
        // Training days subcollection
        match /days/{dayId} {
          allow read, write: if isOwner(coachId);
        }
      }
    }
    
    // Global exercises - readable by all authenticated users
    match /exercises_global/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // For MVP, all coaches can manage global exercises
    }
  }
}
