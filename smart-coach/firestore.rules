rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- AUTH HELPERS ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/coaches/$(request.auth.uid)) &&
             (
               get(/databases/$(database)/documents/coaches/$(request.auth.uid)).data.role == 'admin' ||
               get(/databases/$(database)/documents/coaches/$(request.auth.uid)).data.isAdmin == true
             );
    }
    
    // --- GYM HELPERS ---
    
    // Check if user is the Owner of the Gym Document itself
    function isGymOwner(gymId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/gyms/$(gymId)) &&
             get(/databases/$(database)/documents/gyms/$(gymId)).data.ownerId == request.auth.uid;
    }

    // Check if user is listed in the Gym's coaches subcollection
    function isGymMember(gymId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/gyms/$(gymId)/coaches/$(request.auth.uid));
    }

    // Combined check: Owner OR Member OR Admin
    // THIS IS THE CRITICAL FIX: Ensures owners have access even if not in 'coaches' list
    function hasGymAccess(gymId) {
      return isGymOwner(gymId) || isGymMember(gymId) || isAdmin();
    }

    // --- GLOBAL RULES ---
    
    match /{path=**}/clients/{clientId} {
      allow read: if isAdmin();
    }
    
    match /{path=**}/routines/{routineId} {
      allow read: if isAdmin();
    }
    
    // --- INDEPENDENT COACHES ---
    
    match /coaches/{coachId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == coachId;
      // FIX: Separate update permission for gym owners
      allow update: if isOwner(coachId) || isAdmin() || (resource.data.gymId != null && isGymOwner(resource.data.gymId));
      allow delete: if isOwner(coachId) || isAdmin();
      
      match /clients/{clientId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isOwner(coachId) || isAdmin();
        
        match /measurements/{measurementId} {
          allow read: if isAuthenticated();
          allow write: if isOwner(coachId) || isAdmin();
        }
      }
      
      match /exercises/{exerciseId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(coachId) || isAdmin();
      }
      
      match /routines/{routineId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(coachId) || isAdmin();
        
        match /days/{dayId} {
          allow read: if isAuthenticated();
          allow write: if isOwner(coachId) || isAdmin();
        }
      }

      match /competitor_sheets/{sheetId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(coachId) || isAdmin();
      }
    }
    
    // --- GLOBAL EXERCISES ---
    match /exercises_global/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); 
    }

    // --- ACTIVITY LOGS ---
    match /activity_logins/{loginId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false; // No modifications allowed
    }
    
    // --- GYMS (MULTI-TENANCY) ---
    
    match /gyms/{gymId} {
      // 1. Gym Document
      allow read: if isAuthenticated();
      allow create: if isAdmin() || (isAuthenticated() && request.resource.data.ownerId == request.auth.uid);
      allow update: if isGymOwner(gymId) || isAdmin();
      allow delete: if isAdmin();
      
      // 2. Gym Staff (Coaches)
      match /coaches/{staffId} {
        allow read: if hasGymAccess(gymId) || request.auth.uid == staffId;
        allow create: if request.auth.uid == staffId || isAdmin();
        // Allow owner/admin OR the staff member themselves (to sync profile updates)
        allow update: if isGymOwner(gymId) || isAdmin() || request.auth.uid == staffId;
        allow delete: if isGymOwner(gymId) || isAdmin() || request.auth.uid == staffId;
      }
      
      // 3. Gym Clients - FIXED
      match /clients/{clientId} {
        allow read, create, update, delete: if hasGymAccess(gymId);
        
        match /measurements/{measurementId} {
          allow read, write: if hasGymAccess(gymId);
        }
      }
      
      // 4. Gym Routines - FIXED
      match /routines/{routineId} {
        allow read, write: if hasGymAccess(gymId);
        
        match /days/{dayId} {
          allow read, write: if hasGymAccess(gymId);
        }
      }
      
      // 5. Gym Payments
      match /payments/{paymentId} {
        allow read, write: if hasGymAccess(gymId);
      }

      // 6. Gym Exercises
      match /exercises/{exerciseId} {
        allow read, write: if hasGymAccess(gymId);
      }

      // 7. Gym Competitor Sheets
      match /competitor_sheets/{sheetId} {
        allow read, write: if hasGymAccess(gymId);
      }
    }
  }
}
