rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Coach logos
    match /coaches/{coachId}/logo/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == coachId;
    }
    
    // Coach-specific exercise images
    match /coaches/{coachId}/exercises/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == coachId;
    }
    
    // Global exercise images
    match /exercises_global/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Gym logos and assets - only gym owners can write
    match /gyms/{gymId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     firestore.get(/databases/(default)/documents/gyms/$(gymId)).data.ownerId == request.auth.uid;
    }
  }
}
