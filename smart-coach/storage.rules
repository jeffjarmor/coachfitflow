rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Coach logos
    match /coaches/{coachId}/logo/{fileName} {
      allow read: if true; // Public read for displaying in PDFs
      allow write: if request.auth != null && request.auth.uid == coachId;
    }
    
    // Coach-specific exercise images
    match /coaches/{coachId}/exercises/{fileName} {
      allow read: if true; // Public read
      allow write: if request.auth != null && request.auth.uid == coachId;
    }
    
    // Global exercise images
    match /exercises_global/{fileName} {
      allow read: if true; // Public read
      allow write: if request.auth != null; // Any authenticated coach can upload
    }
  }
}
